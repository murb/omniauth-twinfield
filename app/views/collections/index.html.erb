<% if admin_user? %>
<nav class="sub-nav">
  <ul class="menu right-aligned">
    <li><%= link_to 'Maak een nieuwe collectie', new_collection_path, class: 'small button' %></li>
  </ul>
</nav>
<% end %>

<% if @collections.count == 1%>
<h1>Collecties</h1>
  <p>Naar de collectie <%= link_to @collections.first.name, @collections.first%></p>
<% else %>
  <h1>Overzicht van de collecties </h1>
  <div class="row">
    <div class="medium-9 columns">
      <label>Zoek op naam van de collectie<input type="search" class="list-filter" data-filters="list-to-filter"></label>
      <ul id="list-to-filter" class="collapsable">
        <% @collections.each do |collection| %>
          <%= render collection%>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<script type="text/javascript">
localStorage.setItem('collections', JSON.stringify(<%= Collection.all.to_json(only: [:id, :name]).html_safe %>));
localStorage.setItem('qkunst_user', <%= qkunst_user? %>);
</script>