<div class="row">
  <div class="large-9 medium-9 columns">
    <h2>Beheer eigenaren</h2>
    <div class="row">
      <div class="large-6 columns">
        <h4>Eigenaren</h4>
        <ul>
          <% @owners.each do |owner| %>
            <%= render owner%>
          <% end %>
        </ul>
      </div>

    </div>


  </div>
  <aside class="large-3 medium-3 columns">
    <%= link_to 'Nieuwe eigenaar', new_collection_owner_path(@collection), class: 'button' if can? :create, @collection.owners.new %>
  </aside>
</div>

