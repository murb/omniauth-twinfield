<%= simple_form_for([@collection, @cluster]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <% unless @collection %>
      <%= f.association :collection, collection: current_user.accessible_collections.sort_by(&:to_label), input_html: {class: 'chosen-select'} %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'small button' %>
  </div>
<% end %>
