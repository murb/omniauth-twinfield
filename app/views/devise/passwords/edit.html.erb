<h2>Verander het wachtwoord</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "Nieuw wachtwoord", required: true, autofocus: true, hint: ("Minimaal #{@minimum_password_length} tekens" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "Bevestig het nieuwe wachtwoord", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Verander wachtwoord", class: :button %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
