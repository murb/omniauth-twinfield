<div class="row columns">
  <%= simple_form_for([@collection, @work, @appraisal]) do |f| %>
  <p>Raadpleeg <a href="https://drive.google.com/drive/folders/1yEY2MH4r4JrU3RHASbk73g_Qd7SGjzZP?usp=sharing" target="_blank">de documentatiemap 'Taxatiemodule'</a> voor de werkwijze en referenties.</p>
  <%= f.error_notification %>

  <div class="form-inputs">
  <div class="row">
    <div class="medium-12 columns"><%= f.input :appraised_by %></div>
    <div class="medium-12 columns"><%= f.input :appraised_on, html5: true %></div>
  </div>

  <div class="row">
    <% if @collection.appraise_with_ranges? %>
      <div class="medium-12 columns"><%= f.input :market_value_range, collection: Appraisal::MARKET_VALUE_CATEGORIES.map{|r| ["#{r.min}-#{r.max}", r]} %></div>
      <div class="medium-12 columns"><%= f.input :replacement_value_range, collection: Appraisal::REPLACEMENT_VALUE_CATEGORIES.map{|r| ["#{r.min}-#{r.max}", r]} %></div>
    <% else %>
      <div class="medium-12 columns"><%= f.input :market_value %></div>
      <div class="medium-12 columns"><%= f.input :replacement_value %></div>
    <% end %>
  </div>

    <%= f.input :reference %>

    <%= f.simple_fields_for :work do |wf| %>
      <fieldset>
        <legend>Aankoopgegevens</legend>
          <%= wf.input :purchased_on, html5: true%>
          <%= wf.input :purchase_year, hint: "Alleen invoeren indien geen exacte datum bekend" %>
          <div class="row">
            <div class="medium-8 columns"><%= wf.input :purchase_price %></div>
            <div class="medium-4 columns"><%= wf.association :purchase_price_currency, value: 1%></div>
          </div>
          <%= wf.association( :sources, input_html: {class: 'chosen-select'}, collection: Source.not_hidden) %>
          <%= wf.input :source_comments %>
      </fieldset>

      <fieldset>
        <legend>Andere werk-eigenschappen</legend>
        <%= wf.input :grade_within_collection, collection: Work::GRADES_WITHIN_COLLECTION %>
        <%= wf.input :main_collection  %>
        <%= wf.association :balance_category, input_html: {class: 'chosen-select'}, collection: BalanceCategory.not_hidden %>
        <%= wf.association :owner, input_html: {class: 'chosen-select'}, collection: @collection.available_owners.not_hidden %>
        <div class="row">
          <div class="medium-8 columns"><%= wf.input :print %></div>
          <div class="medium-4 columns"><%= wf.input :print_unknown %></div>
        </div>
        <%= wf.input :other_comments %>
      </fieldset>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: :button%>
  </div>
<% end %>

</div>