<div class="row">
<div class="large-9 medium-9 columns">
<h1><%=@title%></h1>

  <ul>
    <% @artists.each do |artist| %>
      <li>
        <%= link_to artist.name, artist %>
      </li>
    <% end %>
  </ul>
</div>

<aside class="large-3 medium-3 columns">
  <%= link_to 'Nieuwe vervaardiger', new_artist_path, class: :button if qkunst_user? %>
  <% if current_user.admin? %>
    <h3>Administratie</h3>
    <p>
      <small>Onderstaande operatie past veel aan in de database, zijn er onlangs veel zaken toegevoegd, wacht dan een dag zodat er in noodgevallen een backup aanwezig is.</small></p>
    <%= button_to 'Schoon kunstenaars op', artists_clean_path, confirm: "Weet u zeker dat u verder wilt gaan?", class: [:button, :warning], method: :post %>
  <% end %>
</aside>
</div>